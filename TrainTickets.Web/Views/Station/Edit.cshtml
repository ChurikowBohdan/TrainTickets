@model  TrainTickets.Routes.Dto.StationDto

<h2>@L("Station")</h2>
<h3>@L("Edit")</h3>
@using (Html.BeginForm("Edit", "Station",FormMethod.Post,new { @class= "form-horizontal" })) {
	<div class="form-group">
		@Html.AntiForgeryToken()
		<label class="control-label col-sm-2" for="email">@L("Id"):</label>
		<div class="col-sm-10">
			<div class="form-control">
				@Html.EditorFor(t => Model.Id)
			</div>
		</div>
	</div>
	<div class="form-group">
		<label class="control-label col-sm-2" for="pwd">@L("Name"):</label>
		<div class="col-sm-10">
			@Html.TextBoxFor(t => Model.Name, new { @class = "form-control" })
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button type="submit" class="btn btn-default">@L("Save")</button>
		</div>
	</div>
}