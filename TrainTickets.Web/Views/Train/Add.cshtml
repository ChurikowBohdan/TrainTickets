@model TrainTickets.Trains.Dto.TrainDto

<h2>@L("Train")</h2>
<h3>@L("Add")</h3>
@using (Html.BeginForm("Add", "Train", FormMethod.Post, new { @class = "form-horizontal" })) {
	@Html.AntiForgeryToken()
	<div class="form-group">
		<label class="control-label col-sm-2" for="pwd">@L("Number"):</label>
		<div class="col-sm-10">
			@Html.TextBoxFor(t => Model.Number, new { @class = "form-control" })
		</div>
	</div>
	<div class="form-group">
		<label class="control-label col-sm-2" for="pwd">@L("TrainType"):</label>
		<div class="col-sm-10">
			@Html.DropDownListFor(t => t.TrainTypeId, new SelectList(Model.AvailableTrainTypes, "Id", "Name"), new { @class = "form-control" })
		</div>
	</div>
	<div class="form-group">
		<label class="control-label col-sm-2" for="pwd">@L("PlacesCount"):</label>
		<div class="col-sm-10">
			@Html.EditorFor(t => t.PlacesCount, new { @class = "form-control" })
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button type="submit" class="btn btn-default">@L("Save")</button>
		</div>
	</div>
}